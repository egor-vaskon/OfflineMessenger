<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="100"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:divider="@drawable/message_list_divider"
        android:dividerHeight="0dp"
        android:stackFromBottom="false"
        android:transcriptMode="alwaysScroll" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:background="@drawable/image_rounded_background"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="60dp"
                android:maxHeight="60dp"
                android:adjustViewBounds="true"
                android:layout_marginStart="10dp"
                android:id="@+id/message_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <EditText
                android:id="@+id/new_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_message"
                android:textSize="20sp"
                android:textColorHint="@color/message_text"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:inputType="textMultiLine"
                android:layout_toEndOf="@id/message_icon"
                android:layout_toStartOf="@id/attach_file"
                android:textColor="@color/message_text" />

            <ImageButton
                android:id="@+id/attach_file"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_attach_file_black_48"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:scaleType="fitXY"
                android:tint="@color/action_button_tint"
                android:background="?android:selectableItemBackground"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/add_image"/>

            <ImageButton
                android:id="@+id/add_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_add_photo_alternate_black_48"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:tint="@color/action_button_tint"
                android:background="?android:selectableItemBackground"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/send_message"/>

            <ImageButton
                android:id="@+id/send_message"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:selectableItemBackground"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:scaleX="0.65"
                android:scaleY="0.65"
                android:src="@drawable/baseline_send_black_48"
                android:tint="@color/action_button_tint" />

            <FrameLayout
                android:id="@+id/attached_file_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_message"
                android:layout_marginStart="30dp"
                android:visibility="invisible"
                android:background="@drawable/attached_file_background"
                android:padding="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:visibility="invisible"
                    android:id="@+id/attached_file_title"/>
            </FrameLayout>
        </RelativeLayout>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>